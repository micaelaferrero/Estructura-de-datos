  aux= distriminante (a,b,c);
  
      if(aux==0)
      {
         x1=b/2*a;
         cout<<"solucion unica es: "<<x1<<endl;
      }
     else
        { if(aux>0)
            {
               x1=((-b)+(sqrt(aux))/2*a);
               x2=((-b)-(sqrt(aux))/2*a);
               cout<<"El resultado de X1 es: "<<x1<<endl;
               cout<<"El resultado de X2 es: "<<x2<<endl;
            }
         else
           { cout<<"solucion imaginaria";
           }
         }
  getch();

}

